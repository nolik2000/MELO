</div>
  <div class="ab">
  <div class="col-md-5">

  <form method="post" action="/users/login"  class="form-horizontal" role="form">

        <!-- Messages -->
        {{#if success_msg}}
          <div class="col-sm-4"></div>
          <div class="alert alert-success col-sm-8">{{success_msg}}</div>
        {{/if}}

        {{#if error_msg}}
          <div class="col-sm-4"></div>
          <div class="alert alert-danger col-sm-8">{{error_msg}}</div>
        {{/if}}

        {{#if error}}
          <div class="col-sm-4"></div>
          <div class="alert alert-danger col-sm-8">{{error}}</div>
        {{/if}}

        <!-- Login -->
        <div class="form-group">
            <label for="inputEmail3_mobile_number" class="col-sm-4 control-label">Login</label>
            <div class="col-sm-8">
              <input type="text" class="form-control input-lg"
              id="EmailMobileNumber" name="nickname" placeholder="E-mail">
            </div>
        </div>

        <!--Password-->
        <div class="form-group">
            <label for="inputPassword" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control input-lg"
              id="Password3" name="password" placeholder="Password">
            </div>
        </div>

        <!--Sign In-->
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="buttonmy btn-lg singIn">Sign in</button>
            </div>
        </div>

    </form>



<div class="registerStyle">

<form method="post" action="/users/register" class="form-horizontal" role="form">

            <div class="text-right fontStyle">First time on Melomanic?</div>



    {{#if errors}}
          {{#each errors}}
          <div class="col-sm-4"></div>
          <!--<div class="col-md-8">-->
              <div class="alert alert-danger col-sm-8">{{msg}}</div>

          {{/each}}
    {{/if}}

    <!-- Nickname -->
    <div class="form-group">
        <label for="inputNickname" class="col-sm-4 control-label">Nickname</label>
        <div class="col-sm-8">
            <input type="text" class="form-control input-lg"
            placeholder="Nickname" name="nickname" id="Nickname">
        </div>
    </div>

    <!-- Password -->
    <div class="form-group">
        <label for="inputPassword" class="col-sm-4 control-label">Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control input-lg"
            placeholder="Your Password" name="password" id="Password">
        </div>
    </div>

    <!-- Password2 -->
    <div class="form-group">
        <label for="inputPasswordConfirm" class="col-sm-4 control-label">Confirm Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control input-lg"
            placeholder="Confirm Password" name="password2" id="ConfirmPassword">
        </div>
    </div>

    <!-- Mobile Number -->
    <div class="form-group">
        <label for="inputMobileNumber" class="col-sm-4 control-label">Mobile number</label>
        <div class="col-sm-8">
            <input type="tel" class="form-control input-lg"
             placeholder="Mobile number" id="MobileNumber" name="mobileNumber">
        </div>
    </div>

    <!-- E-Mail -->
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-4 control-label">E-mail</label>
        <div class="col-sm-8">
            <input type="email" class="form-control input-lg"
            id="Email" name="email" placeholder="E-mail">
        </div>
    </div>

    <!-- Sign Up -->
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="buttonmy btn-lg singUp">Sign up</button>
        </div>
    </div>


</form>
</div>
</div>
</div>
