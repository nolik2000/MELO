<div class="jumbotron" id="header-photo">
    <div class="container">
        <h1 id = "logo">Melomaniac</h1>

    </div>
</div>

<div class="container space">

    <div class="text-center" id="Logform">Login form</div>

    <form method="post" action="/users/login" class="form-horizontal" role="form">

        {{#if error_msg}}
            <div class="alert alert-danger text-center">{{error_msg}}</div>
        {{/if}}

        {{#if error}}
            <div class="alert alert-danger text-center">{{error}}</div>
        {{/if}}

        <div class="form-group">
            <label class="col-sm-3 control-label">Login</label>
            <div class="col-sm-7">
                <input type="text" class="form-control input-lg" id="Email3" placeholder="Username" name="username">
            </div>
        </div>


        <div class="form-group">
            <label for="Password3" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-7">
                <input type="password" class="form-control input-lg" id="Password3" placeholder="Password" name="password">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn-lg singIn">Sign in</button>
            </div>
        </div>

    </form>

</div>

